<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:gwt='urn:import:com.google.gwt.user.client.ui' 
  xmlns:guvnor='urn:import:org.drools.guvnor.client.common'>

  <ui:with field="images" type="org.drools.guvnor.client.resources.GuvnorImages" />
  <ui:with field="res" type="org.drools.guvnor.client.resources.GuvnorResources" />

  <gwt:VerticalPanel width="100%">
    <gwt:SimplePanel ui:field="messageContainer" styleName="{res.guvnorCss.warningContainer}" visible="false">
      <gwt:HorizontalPanel>
        <gwt:Image resource="{images.infoLarge}" />
        <gwt:Label ui:field="lblMessage" styleName="{res.guvnorCss.warningMessage}" />
      </gwt:HorizontalPanel>
    </gwt:SimplePanel>
  </gwt:VerticalPanel>

</ui:UiBinder>