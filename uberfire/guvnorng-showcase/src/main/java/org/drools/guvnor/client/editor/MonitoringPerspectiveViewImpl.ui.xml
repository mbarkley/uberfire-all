<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
    >

  <ui:with field="i18n" type="org.drools.guvnor.client.i18n.Constants"/>
  <ui:with field='resources' type='org.drools.guvnor.client.resources.ShowcaseResources'/>

  <ui:style>
    .resetDockPanel > div {
      position: static !important;
    }
  </ui:style>

  <gwt:VerticalPanel width="100%">
    <gwt:HTMLPanel ui:field="titlePanel" styleName='{resources.showcaseCss.mainClass}'>
      <div class='{resources.showcaseCss.logoClass}'>
        <gwt:Image resource='{resources.showcaseImages.hdrlogoDrools}'/>
      </div>
      <div class='{resources.showcaseCss.controlsClass}'>
        <div class='{resources.showcaseCss.userInfoClass}'>
          <small>
            <ui:text from='{i18n.WelcomeUser}'/>
            <span ui:field="userName"/>
            <a href='logout.jsp'>[<ui:text from='{i18n.SignOut}'/>]
            </a>
          </small>
        </div>
      </div>
      <div style="clear:both;"></div>
    </gwt:HTMLPanel>
    <gwt:HTMLPanel>
      <gwt:Image resource='{resources.showcaseImages.monitoringScreenshot}'/>
      <gwt:Button ui:field="backWorkspace">Back to Workspace</gwt:Button>
      <gwt:Button ui:field="callService">CallService</gwt:Button>
    </gwt:HTMLPanel>
    <gwt:HorizontalPanel width="100%">
      <gwt:HTMLPanel ui:field="footerPanel"/>
    </gwt:HorizontalPanel>
  </gwt:VerticalPanel>

</ui:UiBinder>