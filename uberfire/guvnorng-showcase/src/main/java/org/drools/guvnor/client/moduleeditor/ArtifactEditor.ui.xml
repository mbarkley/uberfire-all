<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
  xmlns:guvnor-widgets='urn:import:org.drools.guvnor.client.widgets'>

  <ui:style>
    .editor {
    	min-width: 640px;
    	vertical-align: top;
    }
    
    .metadata {
    	vertical-align: top;
    }
    
    .metadata-widget {
    	width: 150px;
    }
  </ui:style>

  <gwt:HTMLPanel>
    <gwt:VerticalPanel width="100%">

      <guvnor-widgets:MessageWidget
        ui:field="messageWidget">
      </guvnor-widgets:MessageWidget>
      <guvnor-widgets:MetaDataWidget
        ui:field="metaWidget" styleName="{style.metadata-widget}">
      </guvnor-widgets:MetaDataWidget>
<!--       <guvnor-widgets:RuleDocumentWidget
        ui:field="ruleDocumentWidget">
      </guvnor-widgets:RuleDocumentWidget> -->
    </gwt:VerticalPanel>
  </gwt:HTMLPanel>

</ui:UiBinder>
