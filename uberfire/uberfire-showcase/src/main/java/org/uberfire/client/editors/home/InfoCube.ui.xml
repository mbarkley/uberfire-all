<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .roundPanel {
      -moz-border-radius: 15px;
      border-radius: 15px;
      background-color: #d3d3d3;
      padding: 10px 10px 10px 10px;
      margin: 1px 1px 1px 1px;
    }

    .title {
      width: 100%;
      text-align: center;
      font-size: 20px;
    }

    .explanation {
      color: #f5f5f5;
      font-size: 10px;
    }

    .arrow {
      width: 100%;
      text-align: right;
      color: #f5f5f5;
    }


  </ui:style>

  <gwt:HTMLPanel ui:field="panel">
    <div class='{style.roundPanel}'>
      <div class='{style.title}'>
        <gwt:Label ui:field="title"/>
      </div>
      <div class='{style.explanation}'>
        <gwt:Label ui:field="content"/>
      </div>
      <div class='{style.arrow}'>-&gt;</div>
    </div>
  </gwt:HTMLPanel>
</ui:UiBinder> 