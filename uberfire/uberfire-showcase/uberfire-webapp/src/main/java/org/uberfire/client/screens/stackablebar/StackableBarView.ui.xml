<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <g:HTMLPanel>
        <g:FlowPanel>
            <b:Row>
                <b:Column size="12">
                    <b:WellForm type="INLINE">
                        <b:Label>Max Bars</b:Label>
                        <b:TextBox ui:field="maxBarsTextBox" placeholder="1"/>
                        <b:Button ui:field="createContainerButton">Create Container</b:Button>
                    </b:WellForm>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="12">
                    <b:WellForm type="INLINE">
                        <b:Label>Bar Id</b:Label>
                        <b:TextBox ui:field="idTextBox"/>
                        <b:Label>Place</b:Label>
                        <b:TextBox ui:field="placeTextBox"/>
                        <b:Label>Max Places</b:Label>
                        <b:TextBox ui:field="maxPlacesTextBox" placeholder="1"/>
                        <b:CheckBox ui:field="alwaysOpenCheckBox">Always Open?</b:CheckBox>
                        <b:Button ui:field="addButton">+</b:Button>
                    </b:WellForm>
                </b:Column>
            </b:Row>
        </g:FlowPanel>
        <g:FlowPanel ui:field="mainPanel"/>
    </g:HTMLPanel>
</ui:UiBinder> 