<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .background {
      background-color: #aaaa99;
      height: 100%;
    }

    .title {
      padding: 10px 0px 10px 0px;
      width: 100%;
      text-align: center;
      font-size: 30px;
      font-family: Tahoma, Geneva, sans-serif;
    }

    .explanation {
      padding-top: 20px;
      text-align: center;
    }

    .note {
      padding-top: 20px;
      padding-left: 10px;
      padding-right: 10px;
      font-weight: bold;
    }
  </ui:style>

  <gwt:HTMLPanel height="100%">
    <div class='{style.background}'>
      <div class='{style.title}'>
        Welcome to UberFire
      </div>
      <div class='{style.explanation}'><span class='{style.note}'>Important Note:</span>This is an Alpha version, and no investments have been made on Look &amp; Feel.
      </div>
    </div>
  </gwt:HTMLPanel>
</ui:UiBinder> 