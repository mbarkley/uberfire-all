<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field="i18n" type="org.drools.guvnor.client.i18n.Constants"/>
    <ui:with field='resources' type='org.drools.guvnor.client.resources.ShowcaseResources'/>

    
    <gwt:VerticalPanel width="100%">
        <gwt:HorizontalPanel width="100%">
            <gwt:HTMLPanel>
               
                <gwt:Label>Group:</gwt:Label>
                <gwt:TextBox
                    ui:field='groupText'>
                </gwt:TextBox>
                <gwt:Button
                    ui:field='refreshTasksButton'>Refresh Tasks
                </gwt:Button>
                <gwt:Label>User:</gwt:Label> 
                <gwt:TextBox
                    ui:field='userText'>
                </gwt:TextBox>
                <gwt:Button
                    ui:field='claimTaskButton'>Claim Task
                </gwt:Button>
            </gwt:HTMLPanel>
        </gwt:HorizontalPanel>
        
        <gwt:HorizontalPanel width="100%">
            <gwt:HTMLPanel>
                <gwt:Label>Group Tasks:</gwt:Label>
            </gwt:HTMLPanel>
        </gwt:HorizontalPanel>
        
        <gwt:HorizontalPanel width="100%">
            <gwt:HTMLPanel>
                <c:DataGrid
                    ui:field='myGroupTaskListGrid'  />
            </gwt:HTMLPanel>

        </gwt:HorizontalPanel>
       
        <gwt:HorizontalPanel width="100%">
            <gwt:HTMLPanel>
                <table
                    style="width:100%">
                    <tr>
                        <td
                            align='center'>
                            <c:SimplePager
                                ui:field='pagerGroup' />
                        </td>
                    </tr>
                </table>
             
            
            </gwt:HTMLPanel>
        </gwt:HorizontalPanel>
    </gwt:VerticalPanel>
    

</ui:UiBinder>