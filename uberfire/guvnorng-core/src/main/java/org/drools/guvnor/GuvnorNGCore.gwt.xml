<?xml version="1.0" encoding="utf-8"?>
<module>
  <!-- Inherit the core Web Toolkit stuff. -->
  <inherits name="com.google.gwt.i18n.I18N"/>
  <inherits name="com.google.gwt.user.User"/>
  <inherits name="com.google.gwt.user.theme.chrome.Chrome"/>
  <inherits name="com.google.gwt.resources.Resources"/>
  <inherits name="com.google.gwt.activity.Activity"/>

  <!-- inherit css based theme -->
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>

  <!-- Errai module inherits -->
  <inherits name="org.jboss.errai.common.ErraiCommon"/>
  <inherits name="org.jboss.errai.bus.ErraiBus"/>
  <inherits name="org.jboss.errai.ioc.Container"/>
  <inherits name="org.jboss.errai.enterprise.CDI"/>
  <inherits name="org.jboss.errai.uibinder.UIBinderForIOC"/>
  <inherits name="org.jboss.errai.enterprise.Jaxrs"/>

  <!-- GWT-DnD module inherits -->
  <inherits name='com.allen_sauer.gwt.dnd.gwt-dnd'/>

  <!-- VFS common interfaces -->
  <inherits name="org.drools.java.nio.VFSCommon"/>

  <!-- Specify the application specific style sheet. -->
  <stylesheet src='css/guvnorng-core.css'/>

  <!-- Specify the paths for translatable code -->
  <source path='client'/>
  <source path='vfs'/>

</module>
